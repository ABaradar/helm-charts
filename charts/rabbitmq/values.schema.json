{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "imageRegistry": {
          "type": "string"
        },
        "imagePullSecrets": {
          "type": "array"
        }
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "commonLabels": {
      "type": "object"
    },
    "commonAnnotations": {
      "type": "object"
    },
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "amqpPort": {
          "type": "integer"
        },
        "managementPort": {
          "type": "integer"
        },
        "epmdPort": {
          "type": "integer"
        },
        "distPort": {
          "type": "integer"
        }
      }
    },
    "auth": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "erlangCookie": {
          "type": "string"
        },
        "existingSecret": {
          "type": "string"
        },
        "existingPasswordKey": {
          "type": "string"
        },
        "existingErlangCookieKey": {
          "type": "string"
        }
      }
    },
    "clustering": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "replicaCount": {
          "type": "integer",
          "minimum": 3
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "memoryHighWatermark": {
          "type": "number"
        },
        "memoryHighWatermarkType": {
          "type": "string",
          "enum": ["relative", "absolute"]
        },
        "diskFreeLimit": {
          "type": "string"
        },
        "extraConfiguration": {
          "type": "string"
        },
        "advancedConfiguration": {
          "type": "string"
        }
      }
    },
    "ldap": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "server": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "userDnPattern": {
          "type": "string"
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "storageClass": {
          "type": "string"
        },
        "accessMode": {
          "type": "string"
        },
        "size": {
          "type": "string"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "port": {
          "type": "integer"
        },
        "serviceMonitor": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "namespace": {
              "type": "string"
            },
            "labels": {
              "type": "object"
            },
            "annotations": {
              "type": "object"
            },
            "interval": {
              "type": "string"
            },
            "scrapeTimeout": {
              "type": "string"
            }
          }
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string"
        },
        "annotations": {
          "type": "object"
        },
        "hosts": {
          "type": "array"
        },
        "tls": {
          "type": "array"
        }
      }
    },
    "resources": {
      "type": "object"
    },
    "nodeSelector": {
      "type": "object"
    },
    "tolerations": {
      "type": "array"
    },
    "affinity": {
      "type": "object"
    },
    "containerSecurityContext": {
      "type": "object"
    },
    "podSecurityContext": {
      "type": "object"
    },
    "livenessProbe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "initialDelaySeconds": {
          "type": "integer"
        },
        "periodSeconds": {
          "type": "integer"
        },
        "timeoutSeconds": {
          "type": "integer"
        },
        "failureThreshold": {
          "type": "integer"
        },
        "successThreshold": {
          "type": "integer"
        }
      }
    },
    "readinessProbe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "initialDelaySeconds": {
          "type": "integer"
        },
        "periodSeconds": {
          "type": "integer"
        },
        "timeoutSeconds": {
          "type": "integer"
        },
        "failureThreshold": {
          "type": "integer"
        },
        "successThreshold": {
          "type": "integer"
        }
      }
    },
    "extraEnv": {
      "type": "array"
    },
    "extraVolumes": {
      "type": "array"
    },
    "extraVolumeMounts": {
      "type": "array"
    }
  }
}