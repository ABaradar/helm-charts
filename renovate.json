{
  "extends": ["config:base"],
  "enabledManagers": ["helm-values"],
  "helm-values": {
    "fileMatch": ["^charts/.*values\\.yaml$"],
    "versioning": "regex:^.+@.+$",
    "extractVersion": "(?<version>[^@]+)@(?<sha>[a-f0-9]{7,40})",
    "rangeStrategy": "replace"
  },
  "packageRules": [
    {
      "matchManagers": ["helm-values"],
      "matchPackagePatterns": [".*"],
      "extractVersion": "(?<tag>[^@]+)@(?<sha>[a-f0-9]{7,40})",
      "versioning": "regex:^.+@.+$",
      "rangeStrategy": "replace",
      "updateTypes": ["minor", "patch", "digest"]
    }
  ]
}
